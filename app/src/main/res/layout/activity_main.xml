<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/textView_intervalIndicator"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/darker_gray"
		android:padding="16dp"
		android:text="@string/intervalIndicatorFormat"
		android:textStyle="bold"/>

	<TextView
		android:id="@+id/textView_loadedPage"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/darker_gray"
		android:padding="16dp"
		android:text="@string/loadedPageFormat"
		android:textStyle="bold"/>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<Button
			android:id="@+id/btn_loadNextPage"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/btn_loadNextPage"/>

		<Button
			android:id="@+id/btn_addNewItem"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/btn_addNewItem"/>
	</LinearLayout>
</LinearLayout>
